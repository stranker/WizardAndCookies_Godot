script/source = "extends Node2D

onready var players_parent : Node2D = $Players
onready var level : Node2D = $Kitchen
var wizards : Array = []

signal on_wizards_created()

func _ready():
	_create_wizards()
	pass

func _create_wizards():
	if GameManager.wizards_gameplay_data.empty(): return
	var wizards_data = GameManager.wizards_gameplay_data
	var wizard_data_1 = wizards_data[0] as WizardData
	var wizard_data_2 = wizards_data[1] as WizardData
	var wizard_instance_1 = wizard_data_1.wizard_scene.instance()
	var wizard_instance_2 = wizard_data_2.wizard_scene.instance()
	wizard_instance_1.set_player_id(wizard_data_1.player_id)
	wizard_instance_2.set_player_id(wizard_data_2.player_id)
	players_parent.add_child(wizard_instance_1)
	players_parent.add_child(wizard_instance_2)
	wizards = players_parent.get_children()
	level.set_wizards_position([wizard_instance_1, wizard_instance_2])
	emit_signal(\"on_wizards_created\")
	pass

func _input(event):
	if event is InputEventKey:
		if event.scancode == KEY_F1:
			for wizard in wizards:
				wizard.restart()
	pass
